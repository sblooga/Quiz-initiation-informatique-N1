{
  "name": "quiz-initiation-informatique-n1",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c auto \"npm --workspace apps/backend run dev\" \"npm --workspace apps/frontend run dev\"",
    "dev:frontend": "npm --workspace apps/frontend run dev",
    "build:frontend": "npm --workspace apps/frontend run build",
    "start:frontend": "npm --workspace apps/frontend run preview",
    "dev:backend": "npm --workspace apps/backend run dev",
    "build:backend": "npm --workspace apps/backend run build",
    "start:backend": "npm --workspace apps/backend run start",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0",
    "playwright": "^1.39.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0"
  },
  "overrides": {
    "multer": "2.0.2"
  }
}
